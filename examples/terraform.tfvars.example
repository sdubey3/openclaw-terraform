# Copy this file to environments/production/terraform.tfvars and fill in your values
# terraform.tfvars should NOT be committed to version control

# AWS region to deploy resources
aws_region = "us-east-1"

# EC2 instance type
instance_type = "t3.small"

# Environment tag
environment = "production"

# Spot instance (recommended for side projects - ~60-90% cost savings)
use_spot_instance = true

# Maximum spot price (leave empty to use on-demand price as cap)
# spot_max_price = "0.02"

# Connect via AWS SSM Session Manager:
# aws ssm start-session --target <instance-id>
